<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Nicotine Tracker Title -->
    <TextView
        android:id="@+id/nicotineTrackerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicotine Exposure Tracker"
        android:textSize="22sp"
        android:textColor="#2260FF"
        android:textStyle="bold"
        android:fontFamily="@font/lato_black"
        android:layout_gravity="center"
        android:paddingBottom="12dp" />

    <!-- Nicotine Intake Display -->
    <TextView
        android:id="@+id/nicotineIntakeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicotine Intake Today"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/lato_bold"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- Current Nicotine Intake -->
    <TextView
        android:id="@+id/currentNicotineIntake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Cigarettes"
        android:textSize="48sp"
        android:textColor="#FF5722"
        android:fontFamily="@font/lato_bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Progress Bar for Nicotine Intake -->
    <ProgressBar
        android:id="@+id/nicotineProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="10"
        android:progress="0"
        android:progressTint="#FF5722"
        android:layout_gravity="center" />

    <!-- Nicotine Reduction Goal Display -->
    <TextView
        android:id="@+id/nicotineGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal: 5 Cigarettes/Day"
        android:textSize="14sp"
        android:textColor="#7B7B7B"
        android:layout_gravity="center"
        android:paddingTop="8dp" />

    <!-- Button to Log Nicotine Intake -->
    <Button
        android:id="@+id/logNicotineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Nicotine Intake"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2260FF"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Button to Show Tips to Reduce Nicotine -->
    <Button
        android:id="@+id/viewTipsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips to Reduce Nicotine"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:layout_gravity="center" />

</LinearLayout>
